{
    "name": "file-explorer",
    "version": "0.1.0",
    "private": true,
    "main": "dist/electron/electron.js",
    "homepage": "./",
    "dependencies": {
        "@chakra-ui/react": "^2.4.2",
        "@electron/remote": "^2.0.8",
        "@emotion/react": "^11.10.5",
        "@emotion/styled": "^11.10.5",
        "electron-squirrel-startup": "^1.0.0",
        "framer-motion": "^7.6.15",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.7.1",
        "react-scripts": "5.0.1",
        "electron-is-dev": "^2.0.0",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build ",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "prepare": "husky install",
        "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"tsc -p electron && npm run electron\"",
        "electron": "wait-on tcp:3000 && electron .",
        "package": "tsc -p electron && electron-builder build --win -c.extraMetadata.main=dist/electron/electron.js --publish never",
        "publish": "electron-builder build --win --publish always",
        "make": "electron-forge make"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/filesystem": "0.0.32",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.4",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.9",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^22.0.0",
        "electron-builder": "^23.6.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.4",
        "typescript": "^4.9.3",
        "wait-on": "^6.0.1"
    }
}
